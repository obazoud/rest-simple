<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
        <pattern>REST-SIMPLE %d{dd/MM/yyyy HH:mm:ss} %5p [%F:%L] - %m%n</pattern>
    </encoder>
  </appender>

  <appender name="METRICS" class="com.yammer.metrics.logback.InstrumentedAppender">
      <encoder>
          <pattern>REST-SIMPLE-METRICS %d{dd/MM/yyyy HH:mm:ss} %5p [%F:%L] - %m%n</pattern>
      </encoder>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="METRICS" />
  </root>

</configuration>
